@model List<SpadStore.Core.Models.Offer>
<div class="sub-banner-part pb-100">
    <div class="container">
        @if (Model.Any())
        {
            <div class="row">
                @if (Model.Count > 0)
                {
                    <div class="col-md-4">
                        <div class="sub-banner-box">
                            <a href="#">
                                <img class="d-block" src="/Files/OffersImages/@Model[0].Image" alt="@Model[0].Title">
                            </a>
                        </div>
                    </div>
                }
                <div class="col-md-8">
                    <div class="row">
                        @if (Model.Count > 1)
                        {
                            <div class="col-md-8">
                                <div class="sub-banner-box">
                                    <a href="#">
                                        <img class="d-block" src="/Files/OffersImages/@Model[1].Image" alt="@Model[1].Title">
                                    </a>
                                </div>
                            </div>
                        }
                        @if (Model.Count > 2)
                        {
                            <div class="col-md-4">
                                <div class="sub-banner-box">
                                    <a href="#">
                                        <img class="d-block" src="/Files/OffersImages/@Model[2].Image" style="margin: auto" alt="@Model[2].Title">
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="row">
                        @if (Model.Count > 3)
                        {
                            <div class="col-12">
                                <div class="sub-banner-box">
                                    <a href="#">
                                        <img class="d-block" src="/Files/OffersImages/@Model[3].Image" alt="@Model[3].Title">
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
