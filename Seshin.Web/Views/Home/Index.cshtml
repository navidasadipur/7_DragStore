                                <form action="/Home/AddEmailSubscription" method="post">
                                    <input name="Email" id="Name" type="email" required placeholder="ایمیل خود را وارد کنید">
                                    <button type="submit" class="btn-color big-width btn" title="اشتراک">اشتراک</button>
                                </form>
                                <div class="check-box mt-30">
                                    <span class="popup-bottom">
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


