@model drugStore7.Web.ViewModels.ContactUsViewModel
@{
    ViewBag.Title = "ارتباط با ما";
}
<div class="contant">
    <div id="banner-part" class="banner inner-banner" style="background-image:url(@ViewBag.Banner)">
        <div class="container">
            <div class="bread-crumb-main">
                <h1 class="banner-title">تماس با ما</h1>
                <div class="breadcrumb">
                    <ul class="inline">
                        <li><a href="/">خانه</a></li>
                        <li>تماس با ما</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="contact-part pt-100">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="add-map pb-100">
                        @Html.Raw(Model.Map)
                    </div>
                    <div class="pb-100">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="contact-box mb-sm-20">
                                    <ul>
                                        <li>
                                            <div class="contact-thumb">
                                                <img src="/Content/client/images/address-icon.svg" alt="">
                                            </div>
                                            <div class="contact-box-detail">
                                                <h4 class="contact-title">آدرس</h4>
                                                <p>@Model.Address</p>
                                            </div>
                                        </li>

                                        <li>
                                            <div class="contact-thumb">
                                                <img src="/Content/client/images/mail-icon.svg" alt="">
                                            </div>
                                            <div class="contact-box-detail">
                                                <h4 class="contact-title">ایمیل</h4>
                                                <p><a href="#">@Model.Email</a></p>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="contact-thumb">
                                                <img src="/Content/client/images/phone-icon.svg" alt="">
                                            </div>
                                            <div class="contact-box-detail">
                                                <h4 class="contact-title">شماره تماس</h4>
                                                <p>@Model.Phone</p>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-8">
                                @Html.Action("ContactUsForm", "Home")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    @section scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
