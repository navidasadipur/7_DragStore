<div id="banner-part" class="banner inner-banner" style="background-image:url(@ViewBag.Banner)">
    <div class="container">
        <div class="bread-crumb-main">
            <h1 class="banner-title">@ViewBag.Title</h1>
            <div class="breadcrumb">
